{
  "name": "News Crawler",
  "description": "뉴스 페이지에서 제목과 본문을 자동으로 추출하고 분석합니다",
  "version": "1.0.1",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://n.news.naver.com/*",
    "http://localhost:8080/*",
    "http://127.0.0.1:8080/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://n.news.naver.com/article/*"],
      "js": ["content.js"],
      "css": [
        "visualize/css/style.css",
        "visualize/css/base.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "News Crawler 설정",
    "default_popup": "visualize/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "visualize/css/*.css",
        "visualize/app/*.js",
        "visualize/*.html",
        "login/*.html",
        "login/css/*.css",
        "login/app/*.js"
      ],
      "matches": ["https://n.news.naver.com/*"]
    }
  ]
}